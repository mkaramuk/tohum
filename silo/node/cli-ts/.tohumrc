{
  "$schema": "https://raw.githubusercontent.com/mkaramuk/tohum/main/metadata.schema.json",
  "version": "1.0.0",
  "name": "@node/cli-ts",
  "description": "Node.js project that configured for TypeScript. This seed uses \"tsup\" as the bundler.",
  "authors": [
    {
      "name": "Muhammed Karamuk",
      "email": "me@mkaramuk.dev",
      "website": "https://mkaramuk.dev"
    }
  ],
  "variables": {
    "prettier_tab_width": {
      "type": "number",
      "default": 2,
      "description": ".prettierrc config for tab width"
    },
    "node_version": {
      "type": "string",
      "default": "node20",
      "description": "Target node config for tsup (node<major version>)"
    },
    "author": {
      "type": "string",
      "default": "Anonymous",
      "description": "package.json author field"
    },
    "version": {
      "type": "string",
      "default": "1.0.0",
      "description": "package.json version field",
      "required": true
    },
    "description": {
      "type": "string",
      "default": "TypeScript project",
      "description": "package.json description field"
    },
    "license": {
      "type": "string",
      "default": "ISC",
      "description": "package.json license field"
    }
  }
}
